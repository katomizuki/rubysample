
<div class="pt-5">
<h1 class="text-center"> 新規登録画面</h1>

<div class="w-50 mx-auto">
<%= form_with model: @user, url: user_path, local: true do |form| %>

  <div class="field form-group">
   <%= form.label :name, "名前" %>
   <%= form.text_field :name, class: "form-control", placeholder: "名前"   %>
   </div>

  <div class="field form-group">
   <%= form.label :email,"メールアドレス" %>
   <%= form.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
   </div>

   <div class="field form-group">
   <%= form.label :password,"パスワード" %>
   <%= form.password_field :password, class: "form-control", placeholder: "パスワード"  %>
   </div>

   <div class="form-group">
   <%= form.submit "新規登録", class: "btn btn-primary mt-3" %>
   </div>
   <div>
  <%= link_to "ログイン画面へ", login_path ,class: "btn btn-secondary mt-3"%>
  </div>
</div>
<% end %>
</div>